@model List<FootballApp.Models.StatystykiZawodnika>

@{
    ViewData["Title"] = "Player Stats";
}

<h2>Player Stats</h2>

<table class="table">
    <thead>
        <tr>
            <th>Player</th>
            <th>Matches</th>
            <th>Goals</th>
            <th>Assists</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var stat in Model)
    {
        <tr>
            <td>@stat.Zawodnik?.Imie @stat.Zawodnik?.Nazwisko</td>
            <td>@stat.Mecze</td>
            <td>@stat.Gole</td>
            <td>@stat.Asysty</td>
            <td>
                <a asp-controller="Stats" asp-action="Edit" asp-route-id="@stat.Id" class="btn btn-sm btn-warning">Edit</a>
            </td>

        </tr>
    }
    </tbody>
</table>
