@model List<FootballApp.Models.StatystykiZawodnika>
@{
    ViewData["Title"] = "Król Strzelców";
}

<h2>🏆 Król Strzelców</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Player</th>
            <th>Goals</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var stat in Model)
    {
        <tr>
            <td>@stat.Zawodnik?.Imie @stat.Zawodnik?.Nazwisko</td>
            <td>@stat.Gole</td>
        </tr>
    }
    </tbody>
</table>
